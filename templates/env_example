# ===== 应用配置 =====
APP_NAME=MyApp
APP_VERSION=1.0.0
APP_DESCRIPTION=FastAPI Application
APP_DEBUG=false
APP_ENV=dev

# ===== API 文档配置 =====
APP_DISABLE_DOCS=false
APP_DOCS_URL=/docs
APP_REDOC_URL=/redoc

# ===== 数据库配置 =====
DB_URL=sqlite:///app.db
DB_ASYNC_URL=sqlite+aiosqlite:///app.db
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=5
DB_POOL_RECYCLE=3600

# ===== Redis 配置（可选） =====
REDIS_HOST=
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# ===== CORS 配置 =====
CORS_ALLOW_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ===== 日志配置 =====
LOG_LEVEL=INFO
LOG_SERIALIZE=false
LOG_BASEDIR=./logs
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true

# ===== JWT 配置 =====
# 警告：生产环境必须修改此密钥！
# JWT 密钥 (至少 32 字符，生产环境必须更换！)
# 可使用命令生成: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ===== API Key 配置 =====
# 多个 API Key 用逗号分隔
API_KEYS=["demo_api_key"]
API_KEY_PREFIX=anq_
API_KEY_LENGTH=32

# ===== 统一路由安全配置 =====
API_ALLOWED_RESOURCES=["user","admin"]
UNIFIED_ROUTE_ALLOW_ALL=false
UNIFIED_ROUTE_REQUIRE_AUTH=true

# ===== 雪花ID配置 =====
SNOW_DATACENTER_ID=1
SNOW_WORKER_ID=1
